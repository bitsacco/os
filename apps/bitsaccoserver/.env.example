# Application Configuration
NODE_ENV=development
PORT=4000
WEBSOCKET_PORT=4001
GRPC_PORT=4002
APP_VERSION=1.0.0-dev

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/bitsacco
MONGODB_USER=bitsacco-app
MONGODB_PASSWORD=app-password

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=redis-password

# Authentication Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# API Keys
API_KEY_SECRET=your-api-key-secret-here
GLOBAL_API_KEY=your-global-api-key-here

# External Services
AFRICAS_TALKING_API_KEY=your-africas-talking-api-key
AFRICAS_TALKING_USERNAME=sandbox

# Swap Service Configuration
SWAP_SERVICE_URL=http://localhost:4040
SWAP_SERVICE_API_KEY=swap-service-api-key

# Fedimint Configuration  
FEDIMINT_CLIENT_URL=http://localhost:7070

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=pretty

# Monitoring Configuration
PROMETHEUS_PORT=9090
TELEMETRY_ENABLED=true
TELEMETRY_ENDPOINT=http://localhost:4318

# Rate Limiting
RATE_LIMIT_SHORT_TTL=1000
RATE_LIMIT_SHORT_LIMIT=10
RATE_LIMIT_MEDIUM_TTL=10000
RATE_LIMIT_MEDIUM_LIMIT=20
RATE_LIMIT_LONG_TTL=60000
RATE_LIMIT_LONG_LIMIT=100

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-here
CSRF_SECRET=your-csrf-secret-here

# Feature Flags
ENABLE_WEBSOCKET=true
ENABLE_GRPC=true
ENABLE_SWAGGER=true
ENABLE_METRICS=true

# Development Configuration
HOT_RELOAD=true
DEBUG_MODE=true