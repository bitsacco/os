{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@bitsacco/common(|/.*)$": "<rootDir>/../../libs/common/src/$1",
    "^@bitsacco/testing(|/.*)$": "<rootDir>/../../libs/testing/src/$1"
  }
}
