# Test Environment Configuration
NODE_ENV=test
PORT=4000
WEBSOCKET_PORT=4001
GRPC_PORT=4002
APP_VERSION=1.0.0-test

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/bitsacco-test
MONGODB_USER=bitsacco-test
MONGODB_PASSWORD=test-password

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=test-redis-password

# Authentication Configuration - Must be at least 32 characters
JWT_SECRET=test-super-secret-jwt-key-that-is-at-least-32-characters-long
JWT_REFRESH_SECRET=test-super-secret-refresh-key-that-is-at-least-32-characters-long
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# API Keys
API_KEY_SECRET=test-api-key-secret-that-is-long-enough
GLOBAL_API_KEY=test-global-api-key-for-testing

# External Services
AFRICAS_TALKING_API_KEY=test-africas-talking-api-key
