# Swap Service Configuration
SWAP_SERVICE_URL=http://localhost:4040
SWAP_SERVICE_API_KEY=test-swap-service-api-key

# Fedimint Configuration  
FEDIMINT_CLIENT_URL=http://localhost:7070

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Logging Configuration
LOG_LEVEL=error
LOG_FORMAT=json

# Monitoring Configuration
PROMETHEUS_PORT=9090
TELEMETRY_ENABLED=false
TELEMETRY_ENDPOINT=http://localhost:4318

# Rate Limiting
RATE_LIMIT_SHORT_TTL=1000
RATE_LIMIT_SHORT_LIMIT=100
RATE_LIMIT_MEDIUM_TTL=10000
RATE_LIMIT_MEDIUM_LIMIT=200
RATE_LIMIT_LONG_TTL=60000
RATE_LIMIT_LONG_LIMIT=1000

# Security Configuration
