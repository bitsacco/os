{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/server/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "assets": [
      "**/*.proto"
    ],
    "watchAssets": true
  },
  "projects": {
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json",
        "declaration": true
      }
    },
    "testing": {
      "type": "library",
      "root": "libs/testing",
      "entryFile": "index",
      "sourceRoot": "libs/testing/src",
      "compilerOptions": {
        "tsConfigPath": "libs/testing/tsconfig.lib.json",
        "declaration": true
      }
    },
    "server": {
      "type": "application",
      "root": "apps/server",
      "entryFile": "main",
      "sourceRoot": "apps/server/src",
      "compilerOptions": {
        "tsConfigPath": "apps/server/tsconfig.app.json"
      }
    },
    "admin": {
      "type": "application",
      "root": "apps/admin",
      "sourceRoot": "apps/admin/src",
      "compilerOptions": {
        "webpackConfigPath": "apps/admin/next.config.mjs",
        "skipTypeCheck": true,
        "typescript": {
          "skipCheck": true
        },
        "webpack": false,
        "tsConfigPath": "apps/admin/tsconfig.json"
      }
    },
    "swap": {
      "type": "application",
      "root": "apps/swap",
      "entryFile": "main",
      "sourceRoot": "apps/swap/src",
      "compilerOptions": {
        "tsConfigPath": "apps/swap/tsconfig.app.json"
      }
    }
  },
  "monorepo": true,
  "root": "apps/server"
}
